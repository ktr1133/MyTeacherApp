APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# HTTPS強制設定（本番環境: true、ローカル環境: false）
# 本番環境ではALB経由でもHTTPSとして認識させるため必須
FORCE_HTTPS=false

# プロキシ信頼設定（本番環境: true、ローカル環境: false）
# 本番環境ではALB/CloudFrontのX-Forwarded-*ヘッダーを信頼
# ローカル環境でtrueにするとセッション/CSRFトークンが正常に動作しない
TRUST_PROXIES=false

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Amazon Cognito設定（Phase 1: JWT認証）
COGNITO_REGION=ap-northeast-1
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
COGNITO_ADMIN_CLIENT_ID=

VITE_APP_NAME="${APP_NAME}"

# ========================================
# 管理者ユーザー設定
# ========================================
ADMIN_EMAIL=famicoapp@gmail.com
ADMIN_PASSWORD=FS5Vt&s/L2X*

# ========================================
# 管理者セキュリティ設定（Stripe要件対応）
# ========================================
# IP制限機能の有効/無効（本番環境: true推奨）
ADMIN_IP_RESTRICTION_ENABLED=false

# 許可するIPアドレス（JSON配列形式、CIDR記法対応）
# 例: '["192.168.1.100","203.0.113.0/24","10.0.0.0/8"]'
# 本番環境では実際の管理者IPアドレスに変更してください
ADMIN_ALLOWED_IPS='["127.0.0.1"]'

# Basic認証設定（IP制限が使用できない場合の代替手段）
ADMIN_BASIC_AUTH_ENABLED=false
ADMIN_BASIC_AUTH_USERNAME=admin
ADMIN_BASIC_AUTH_PASSWORD=FS5Vt&s/L2X*

# アカウントロック設定
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION=30

# セキュリティログ保持期間（日）
ADMIN_SECURITY_LOG_RETENTION_DAYS=90

# ========================================
# ウイルススキャン設定（Stripe要件対応）
# ========================================
# ClamAVコマンドのパス
CLAMAV_PATH=/usr/bin/clamscan

# スキャンタイムアウト（秒）
CLAMAV_TIMEOUT=60

# スキャン対象ファイルサイズ上限（バイト、0=無制限）
CLAMAV_MAX_FILE_SIZE=0

# ウイルススキャンの有効/無効
SECURITY_VIRUS_SCAN_ENABLED=true

# スキャン失敗時の動作（strict: 拒否、lenient: 警告のみ）
SECURITY_SCAN_FAILURE_MODE=strict

# ========================================
# Browsershot/Puppeteer設定（PDF生成）
# ========================================
BROWSERSHOT_CHROME_PATH=/usr/bin/chromium
BROWSERSHOT_NODE_PATH=/usr/bin/node
BROWSERSHOT_NPM_PATH=/usr/bin/npm

